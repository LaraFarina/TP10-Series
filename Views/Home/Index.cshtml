@{
    ViewData["Title"] = "Index";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<!--Cada link de los cards de las series debe abrir un único  modal con la info correspondiente (link a temporadas de una serie, a actores de una serie o a la info de la serie.-->
<div class="titulo">
<h1>Wattch</h1>
<h2>Series Everywhere</h2>
</div>
@foreach(Series S in ViewBag.Series){
<div class="card">
   <img src='@S.ImagenSerie' class="card-img-top" alt="Img"> @*<!--Acá va ImagenSerie, dentro de "Series"--> *@
  <div class="card-body">
    <h5 class="card-title">@S.Nombre (@S.AñoInicio)</h5> @*<!--Nombre de la serie-->*@
    <a href="#" class="btn btn-primary">Temporadas</a>
    <a href="#" class="btn btn-primary">Actores</a>
    <a href="#" class="btn btn-primary">Mas info</a> @*<!-- Acá van los datos de Sinopsis, está dentro de "Series"-->*@
  </div>
</div>
}